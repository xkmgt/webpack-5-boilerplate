{
		"name": "webpack-5-boilerplate",
		"version": "0.0.0",
		"description": "Webpack 5 Boilerplate: Node.js, Express, Pug, ES6, SASS, jQuery",
		"author": "Murat Karaca <dev@muratkaraca.de> (https://www.kmgt.de)",
		"license": "MIT",
		"scripts": {
				"build:prod": "webpack --mode=production --progress --profile",
				"watch:build": "webpack --watch --mode=development --progress --profile",
				"watch:server": "nodemon app.js",
				"dev": "npm-run-all --parallel watch:build watch:server",
				"dev:windows": "(set NODE_ENV=development) && npm run dev",
				"dev:unix": "NODE_ENV=development npm run dev",
				"prod": "npm run build:prod && node app.js",
				"prod:windows": "(set NODE_ENV=production) && npm run prod",
				"prod:unix": "NODE_ENV=production npm run prod"
		},
		"dependencies": {
				"body-parser": "^1.19.0",
				"compression": "^1.7.4",
				"config": "^3.3.3",
				"express": "^4.17.1",
				"express-session": "^1.17.1",
				"helmet": "^4.2.0",
				"jquery": "^3.5.1",
				"memorystore": "^1.6.4",
				"morgan": "^1.10.0",
				"pug": "^3.0.0",
				"winston": "^3.3.3"
		},
		"devDependencies": {
				"@babel/cli": "^7.12.10",
				"@babel/core": "^7.12.10",
				"@babel/preset-env": "^7.12.11",
				"acorn": "^8.0.4",
				"babel-loader": "^8.2.2",
				"babel-polyfill": "^6.26.0",
				"clean-webpack-plugin": "^3.0.0",
				"css-loader": "^5.0.1",
				"file-loader": "^6.2.0",
				"gulp-babel": "^8.0.0",
				"html-webpack-plugin": "^4.5.0",
				"html-webpack-pug-plugin": "^2.0.0",
				"mini-css-extract-plugin": "^1.3.3",
				"node-sass": "^5.0.0",
				"nodemon": "^2.0.6",
				"npm-run-all": "^4.1.5",
				"optimize-css-assets-webpack-plugin": "^5.0.4",
				"postcss-loader": "^4.1.0",
				"postcss-preset-env": "^6.7.0",
				"pug-loader": "^2.4.0",
				"sass-loader": "^10.1.0",
				"style-loader": "^2.0.0",
				"webpack": "^5.11.0",
				"webpack-cli": "^4.2.0"
		},
		"engines": {
				"node": ">=14.0.0",
				"npm": ">=6.0.0"
		}
}
